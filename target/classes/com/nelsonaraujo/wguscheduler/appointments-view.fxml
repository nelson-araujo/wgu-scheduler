<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nelsonaraujo.wguscheduler.Controller.AppointmentsController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" minWidth="50.0" style="-fx-background-color: #DCDCDC;">
               <children>
                  <GridPane prefHeight="50.0" prefWidth="0.0" style="-fx-background-color: f6f6f6;">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <ImageView fx:id="appointmentsIcon" accessibleRole="BUTTON" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <image>
                              <Image url="@icons/appointmentsIcon.png" />
                           </image>
                           <effect>
                              <ColorAdjust brightness="0.5" />
                           </effect>
                        </ImageView>
                     </children>
                  </GridPane>
                  <GridPane alignment="CENTER" prefHeight="50.0" prefWidth="0.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <ImageView fx:id="customersIcon" accessibleRole="BUTTON" onMouseClicked="#onCustomersIconClick" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <image>
                              <Image url="@icons/customersIcon.png" />
                           </image>
                        </ImageView>
                     </children>
                  </GridPane>
                  <GridPane alignment="CENTER" layoutX="10.0" layoutY="60.0" prefHeight="50.0" prefWidth="0.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <ImageView fx:id="reportsIcon" accessibleRole="BUTTON" onMouseClicked="#onReportsIconClick" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <image>
                              <Image url="@icons/reportsIcon.png" />
                           </image>
                        </ImageView>
                     </children>
                  </GridPane>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="700.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Appointments">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label text="Upcoming appointments:">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Label>
                  <TableView fx:id="upcomingTblView" minWidth="-Infinity" prefHeight="75.0">
                     <columns>
                        <TableColumn minWidth="50.0" prefWidth="175.0" text="Start">
                           <cellValueFactory>
                              <PropertyValueFactory property="start" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="70.0" prefWidth="125.0" text="Type">
                           <cellValueFactory>
                              <PropertyValueFactory property="type" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="121.0" prefWidth="130.0" text="Customer Name">
                           <cellValueFactory>
                              <PropertyValueFactory property="customerName" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                  </TableView>
                  <HBox>
                     <children>
                        <Button fx:id="addBtn" mnemonicParsing="false" text="Add">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="updateBtn" mnemonicParsing="false" text="Update">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="cancelBtn" layoutX="152.0" layoutY="10.0" mnemonicParsing="false" text="Cancel">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin></Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox>
                     <children>
                        <RadioButton fx:id="weekRbtn1" layoutX="10.0" layoutY="10.0" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="65.0" text="All" />
                        <RadioButton fx:id="weekRbtn" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="65.0" text="Week">
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="monthRBtn" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="65.0" text="Month">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </RadioButton>
                        <TextField fx:id="searchTxtFld" prefHeight="24.0" prefWidth="200.0" promptText="Search">
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                        </TextField>
                        <ChoiceBox fx:id="timezoneChcBx" minWidth="150.0" prefHeight="24.0" prefWidth="200.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="appointmentsTblView" prefHeight="150.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="id" maxWidth="1.7976931348623157E308" minWidth="27.0" prefWidth="-1.0" text="Id">
                         <cellValueFactory>
                            <PropertyValueFactory property="id" />
                         </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="customerName" maxWidth="1.7976931348623157E308" minWidth="75.0" prefWidth="125.0" text="Customer">
                           <cellValueFactory>
                              <PropertyValueFactory property="customerName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="location" maxWidth="1.7976931348623157E308" minWidth="70.0" prefWidth="70.0" text="Location">
                           <cellValueFactory>
                              <PropertyValueFactory property="location" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="start" maxWidth="1.7976931348623157E308" minWidth="45.0" text="Start">
                           <cellValueFactory>
                              <PropertyValueFactory property="start" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="end" maxWidth="1.7976931348623157E308" minWidth="35.0" text="End">
                           <cellValueFactory>
                              <PropertyValueFactory property="end" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="type" maxWidth="1.7976931348623157E308" minWidth="40.0" text="Type">
                           <cellValueFactory>
                              <PropertyValueFactory property="type" />
                           </cellValueFactory>
                        </TableColumn>
                      <TableColumn fx:id="title" maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="50.0" text="Title">
                         <cellValueFactory>
                            <PropertyValueFactory property="title" />
                         </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="description" maxWidth="1.7976931348623157E308" minWidth="90.0" prefWidth="90.0" text="Description">
                         <cellValueFactory>
                            <PropertyValueFactory property="description" />
                         </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="contactId" maxWidth="1.7976931348623157E308" minWidth="65.0" prefWidth="75.0" text="Contact">
                           <cellValueFactory>
                              <PropertyValueFactory property="contactId" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="userId" maxWidth="1.7976931348623157E308" minWidth="40.0" prefWidth="50.0" text="User">
                           <cellValueFactory>
                              <PropertyValueFactory property="userId" />
                           </cellValueFactory>
                        </TableColumn>
                    </columns>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TableView>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onExitBtnClick" text="Exit" />
                    </buttons>
                  </ButtonBar>
               </children>
               <HBox.margin>
                  <Insets left="10.0" right="5.0" top="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
