<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nelsonaraujo.wguscheduler.Controller.AppointmentsController">
   <children>
      <HBox>
         <children>
            <VBox alignment="TOP_CENTER" minWidth="50.0" style="-fx-background-color: #DCDCDC;">
               <children>
                  <ImageView fx:id="appointmentsIcon" accessibleRole="BUTTON" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/appointmentsIcon.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                     </VBox.margin>
                     <effect>
                        <ColorAdjust brightness="0.5" />
                     </effect>
                  </ImageView>
                  <ImageView fx:id="customersIcon" accessibleRole="BUTTON" onMouseClicked="#onCustomersIconClick" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/customersIcon.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                     </VBox.margin>
                  </ImageView>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox prefWidth="700.0">
               <children>
                  <Label text="Appointments">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label text="Upcoming appointments:">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Label>
                  <TableView fx:id="upcomingTblView" minWidth="-Infinity" prefHeight="50.0">
                     <columns>
                        <TableColumn minWidth="50.0" prefWidth="175.0" text="Start">
                           <cellValueFactory>
                              <PropertyValueFactory property="start" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="70.0" prefWidth="125.0" text="Type">
                           <cellValueFactory>
                              <PropertyValueFactory property="type" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="121.0" prefWidth="130.0" text="Customer Name">
                           <cellValueFactory>
                              <PropertyValueFactory property="customerName" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                  </TableView>
                  <HBox>
                     <children>
                        <Button fx:id="addBtn" mnemonicParsing="false" text="Add">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="updateBtn" mnemonicParsing="false" text="Update">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="cancelBtn" layoutX="152.0" layoutY="10.0" mnemonicParsing="false" text="Cancel">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin></Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox>
                     <children>
                        <RadioButton fx:id="weekRbtn" mnemonicParsing="false" text="Week">
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="monthRBtn" mnemonicParsing="false" text="Month">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </RadioButton>
                        <TextField fx:id="searchTxtFld" promptText="Search">
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                        </TextField>
                        <ChoiceBox fx:id="timezoneChcBx" minWidth="150.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="appointmentsTblView" prefHeight="200.0">
                    <columns>
                      <TableColumn minWidth="50.0" prefWidth="175.0" text="Start">
                         <cellValueFactory>
                            <PropertyValueFactory property="start" />
                         </cellValueFactory>
                      </TableColumn>
                      <TableColumn minWidth="70.0" prefWidth="125.0" text="Type">
                         <cellValueFactory>
                            <PropertyValueFactory property="type" />
                         </cellValueFactory>
                      </TableColumn>
                      <TableColumn minWidth="121.0" prefWidth="130.0" text="Customer Name">
                         <cellValueFactory>
                            <PropertyValueFactory property="customerName" />
                         </cellValueFactory>
                      </TableColumn>
                    </columns>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TableView>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onExitBtnClick" text="Exit" />
                    </buttons>
                  </ButtonBar>
               </children>
               <HBox.margin>
                  <Insets left="10.0" right="5.0" top="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
