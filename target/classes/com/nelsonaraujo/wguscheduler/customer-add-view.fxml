<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nelsonaraujo.wguscheduler.Controller.CustomerAddController">
   <children>
      <Label text="Add Customer">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="1.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="Name: " />
                  <TextField fx:id="nameTxtFld" style="-fx-border-color: #d3d3d3;">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="Phone: " />
                  <TextField fx:id="phoneTxtFld" minHeight="-Infinity" prefHeight="26.0" style="-fx-border-color: #d3d3d3;" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="44.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="Address: " />
                  <TextField fx:id="addressTxtFld" style="-fx-border-color: #d3d3d3;" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="78.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="Postal Code: " />
                  <TextField fx:id="postalCodeTxtFld" style="-fx-border-color: #d3d3d3;" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="112.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="Country: " />
                  <ChoiceBox fx:id="countryChcBx" minHeight="-Infinity" onAction="#onCountrySelection" prefHeight="26.0" prefWidth="80.0" style="-fx-border-color: #d3d3d3;" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="146.0">
               <children>
                  <Label alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="26.0" prefWidth="104.0" text="State/Province: " />
                  <ChoiceBox fx:id="stateProvinceChcBx" minHeight="-Infinity" prefHeight="26.0" prefWidth="173.0" style="-fx-border-color: #d3d3d3;" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addBtnAction" text="Add" />
            <Button fx:id="cancelBtn" layoutX="210.0" layoutY="18.0" mnemonicParsing="false" onAction="#cancelBtnAction" text="Cancel" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
