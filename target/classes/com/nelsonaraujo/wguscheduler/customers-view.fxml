<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nelsonaraujo.wguscheduler.Controller.CustomersController">
    <children>
        <HBox>
            <children>
                <VBox alignment="TOP_CENTER" minWidth="50.0" style="-fx-background-color: #DCDCDC;">
                    <children>
                        <ImageView fx:id="appointmentsIcon" accessibleRole="BUTTON" onMouseClicked="#onAppointmentsIconClick" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/appointmentsIcon.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                            </VBox.margin>
                        </ImageView>
                        <ImageView fx:id="customersIcon" accessibleRole="BUTTON" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/customersIcon.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                            </VBox.margin>
                     <effect>
                        <ColorAdjust brightness="0.5" />
                     </effect>
                        </ImageView>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>
                <VBox prefWidth="700.0">
                    <children>
                        <Label text="Customers">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <HBox>
                            <children>
                                <Button fx:id="addBtn" onAction="#customerAddBtnOnAction" mnemonicParsing="false" text="Add">
                                    <HBox.margin>
                                        <Insets right="15.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="updateBtn" onAction="#customerUpdateBtnOnAction" mnemonicParsing="false" text="Update">
                                    <HBox.margin>
                                        <Insets right="15.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="deleteBtn" layoutX="152.0" layoutY="10.0" mnemonicParsing="false" text="Delete">
                                    <HBox.margin>
                                        <Insets right="15.0" />
                                    </HBox.margin></Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" top="20.0" />
                            </VBox.margin>
                        </HBox>
                        <TableView fx:id="appointmentsTblView" prefHeight="200.0">
                            <columns>
                                <TableColumn minWidth="20.0" prefWidth="20.0" text="ID">
                                    <cellValueFactory>
<!--                                        <PropertyValueFactory property="id" />-->
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="50.0" prefWidth="125.0" text="Name">
                                    <cellValueFactory>
<!--                                        <PropertyValueFactory property="name" />-->
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="50.0" prefWidth="100.0" text="Phone">
                                    <cellValueFactory>
<!--                                        <PropertyValueFactory property="phone" />-->
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="70.0" prefWidth="150.0" text="Address">
                                   <cellValueFactory>
<!--                                      <PropertyValueFactory property="address" />-->
                                   </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="70.0" text="Zip Code">
                                   <cellValueFactory>
<!--                                      <PropertyValueFactory property="postalCode" />-->
                                   </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="45.0" prefWidth="100.0" text="State">
                                   <cellValueFactory>
<!--                                      <PropertyValueFactory property="divisionName" />-->
                                   </cellValueFactory>
                                </TableColumn>
                                <TableColumn minWidth="65.0" prefWidth="100.0" text="Country">
                                   <cellValueFactory>
<!--                                      <PropertyValueFactory property="country" />-->
                                   </cellValueFactory>
                                </TableColumn>
                            </columns>
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </TableView>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0">
                            <buttons>
                                <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onExitBtnClick" text="Exit" />
                            </buttons>
                        </ButtonBar>
                    </children>
                    <HBox.margin>
                        <Insets left="10.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </VBox>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
